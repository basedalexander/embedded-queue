{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,

    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "DOM"]
  },
  "exclude": [
    "node_modules",
    "src"
  ]
}